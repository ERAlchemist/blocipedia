<h1> Wikis </h1>
<div class="container">
  <div class="row">
      <div class="col-md-8">
        <% @wikis.each do |wiki| %>
          <div class="media">
            <div class="media-body">
              <h4 class="media-heading">
                <%= link_to wiki.title, wiki %>
              </h4>
              <small>
                <%= wiki.body %>
              </small>
            </div>
          </div>
        <% end %>
      </div>
      <% if user_is_authorized_to_create? %>
        <div class="row">
          <div class="pull-right">
            <%= link_to "Create new Wiki", new_wiki_path, class: 'btn btn-success' %>
          </div>
        </div>
      <% end %>
  </div>
</div>